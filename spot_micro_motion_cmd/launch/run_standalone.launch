<?xml version="1.0" encoding="utf-8"?>
<!-- Launch file for launching a standalone spot micro motion command node --> 
<!-- Use for debugging, as normally this node requires the i2c_pwmboard node -->

<launch>
    <!-- Defining the node and executable and publishing the output on terminal-->
    <node name="spot_micro_motion_cmd_node" pkg="spot_micro_motion_cmd" type="spot_micro_motion_cmd_node" output="screen">
        
        <!-- load parameters from yaml file -->
        <rosparam command="load" file="$(find spot_micro_motion_cmd)/config/spot_micro_motion_cmd.yaml"/>
        
        <!-- When running standalone, override the debug_mode parameter to true -->
        <!-- Otherwise startup will fail as ros_i2cpwmboard is needed for a service call -->
        <param name="debug_mode" value="true" />
    </node>
</launch>
